{% extends "PFAEnsaoboxBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}


		{% block pfa_ensaoboxHeader %}
            {{ parent() }}
        {% endblock %}
    {% block pfa_ensaoboxMenu %}
        {{ parent() }}
    {% endblock %}
  	{% block pfa_ensaoboxContainer %}
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!-- page start-->
                <div class="row">
                    <div class="col-md-9">
                        <div class="row product-list">
                            {% for user in liste %}
                                <div class="col-md-3">
                                    <section class="panel">
                                        <div class="pro-img-box" style="width: 186px; height: 200px;background-image: url({{ asset( 'uploads/user/profilepics/non_trouve.jpg') }})">
                                        <img alt=""
                                             src="{{ asset( 'uploads/'~user.getWebProfilePicturePath() ) }}"
                                             width="250" height="200">

                                        </div>
                                        <div class="panel-body text-center" style="height: 90px;">
                                            <h4>
                                                {{ user.nom }} {{ user.prenom }}
                                            </h4>
                                        </div>
                                    </section>
                                </div>
                            {% endfor %}

                        </div>
                        <!-- page end-->
                        <button type="button" class="btn btn-shadow btn-danger"
                                onclick="location.href='{{ render(controller('PFAEnsaoboxBundle:ListeEtudiantsPdf:indexAction')) }}'">GÃ©nerer PDF
                        </button>
                    </div>
                </div>
            </section>
        </section>
    {% endblock %}
    {% block pfa_ensaoboxFooter %}

    {% endblock %}
        