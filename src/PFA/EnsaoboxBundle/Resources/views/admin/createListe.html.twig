{# src/ENSAO/EnsaoboxBundle/Resources/views/admin/createUsers.html.twig #}

{% extends "PFAEnsaoboxBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}


		{% block pfa_ensaoboxHeader %}
            {{ parent() }}
        {% endblock %}
    {% block pfa_ensaoboxMenu %}
        {{ parent() }}
    {% endblock %}

    {% block pfa_ensaoboxContainer %}

        <section id="main-content">
            <section class="wrapper">
                {% if error is not empty %}
                    <div class="text-center"><h2 class="alert-info">{{ error }}</h2></div>
                {% endif %}
                <row>
                    <div class="col-lg-6 col-md-6">
                        <section class="panel">
                            <header class="panel-heading">
                                Génération des comptes des étudiants.
                            </header>
                            <div class="panel-body">

                                {{ form_start(form) }}
                                    {{ form_errors(form) }}

                                    <div class="form-group">
                                        {{ form_label(form.filiere, 'Spécifiez la filière') }}
                                        {{ form_errors(form.filiere) }}
                                        {{ form_widget(form.filiere, { 'id': 'filiere'}) }}
                                    </div>

                                    <div class="form-group">
                                        {{ form_label(form.niveau, 'Spécifiez le niveau') }}
                                        {{ form_errors(form.niveau) }}
                                        {{ form_widget(form.niveau, { 'id': 'niveau'}) }}
                                    </div>


                                    <div class="form-group col-lg-2 col-md-2 col-xs-2 col-sm-2">
                                        {{ form_widget(form.submit) }}
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </section>
                    </div>
                </row>
            </section>
        </section>
    {% endblock %}

    {% block pfa_ensaoboxFooter %}

    {% endblock %}