{# src/ENSAO/EnsaoboxBundle/Resources/views/addFiles/index.html.twig #}

{% extends "PFAEnsaoboxBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}


		{% block pfa_ensaoboxHeader %}
           	{{ parent() }}
    {% endblock %}
    {% block pfa_ensaoboxMenu %}
           {{ parent() }}
    {% endblock %}
  	{% block pfa_ensaoboxContainer %}
        <!--main content start-->
        {#<style>#}
            {#.fileUpload input .upload {#}
                {#position: absolute;#}
                {#top: 0;#}
                {#right: 0;#}
                {#margin: 0;#}
                {#padding: 0;#}
                {#font-size: 20px;#}
                {#cursor: pointer;#}
                {#opacity: 0;#}
                {#filter: alpha(opacity=0);#}
            {#}#}
        {#</style>#}
        <section id="main-content">
          <section class="wrapper">
              <h1 class="text-center">Dépôt de votre fichiers</h1>
              <div class="text-center"><h2 class="alert-info">{{ error }}</h2></div>
              <row>
                  <div class="col-lg-4 col-md-4">
                      <section class="panel">
                          <header class="panel-heading">
                              Telecharger un Fichier
                          </header>
                          <div class="panel-body">
                              {{ form_start(form) }}
                              <div class="form-group">
                                  {{ form_label(form.filieres) }}
                                  {{ form_widget(form.filieres) }}
                                  {{ form_errors(form.filieres) }}
                              </div>
                              <div class="form-group">
                                  {{ form_label(form.classes) }}
                                  {{ form_widget(form.classes) }}
                                  {{ form_errors(form.classes) }}
                              </div>
                              <div class="form-group">
                                  {{ form_label(form.matieres) }}
                                  {{ form_widget(form.matieres) }}
                                  {{ form_errors(form.matieres) }}
                              </div>
                              <div class="form-group">
                                  {{ form_label(form.name) }}
                                  {{ form_widget(form.name) }}
                                  {{ form_errors(form.name) }}
                              </div>
                              <div class="form-group col-lg-8 col-md-8 col-xs-8 col-sm-8 fileUpload btn btn-primary">
                                  {{ form_widget(form.file) }}
                                  {{ form_errors(form.file) }}
                              </div>
                              <div class="form-group col-lg-2 col-md-2 col-xs-2 col-sm-2">
                                {{ form_widget(form.envoyer) }}
                              </div>
                              {{ form_end(form) }}

                          </div>
                      </section>
                  </div>
                  <div class="col-lg-8 col-md-8">
                        <section class="panel">
                        <header class="panel-heading">
                          <h4 class="text-center"><b>Les Documents partagés avec les étudiants</b></h4>
                      </header>
                        <table class="table table-striped table-advance table-hover">
                          <thead>
                          <tr>
                              <th><i class="fa fa-bullhorn"></i> Filière</th>
                              <th class="hidden-phone"><i class="fa fa-question-circle"></i> Niveau</th>
                              <th><i class="fa fa-bookmark"></i> Matière</th>
                              <th><i class=" fa fa-edit"></i> Cours</th>
                              <th></th>
                          </tr>
                          </thead>
                          <tbody>
                          {% for d in doc  %}
                          <tr>
                              <td>{{ d.filieres.nomFiliere }}</td>
                              <td>{{ d.classes.nomClasse }}</td>
                              <td>{{ d.matieres.nomMatiere }}</td>
                              <td><a href="{{ asset('uploads/documents/'~d.filieres.nomFiliere~'/'~d.classes.nomClasse~'/'~userNameSession~'/'~d.matieres.nomMatiere~'/'~d.path) }}">{{ d.path }}</a></td>
                              <td>
                                  <button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>
                                  {#<button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>#}
                                  <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                              </td>
                          </tr>
                          {% endfor %}
                          </tbody>
                      </table>
                  </section>
                    </div>
              </row>
          </section>
        </section>
    {% endblock %}
    {% block pfa_ensaoboxFooter %}
            
    {% endblock %}
        